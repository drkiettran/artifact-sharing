<configuration>

	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%level [%thread] %logger{0} %M - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="io.netty" level="warn" />

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>